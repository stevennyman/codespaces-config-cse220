FROM mcr.microsoft.com/devcontainers/universal:2
RUN apt-get update && apt-get install -y build-essential manpages-dev gcc-mips-linux-gnu openjdk-11-jdk-headless valgrind cppcheck git netpbm imagemagick-6.q16 libncurses5-dev ninja-build meson cmake pkg-config libffi-dev libgit2-dev
RUN curl -o oclint-22.02-llvm-13.0.1-x86_64-linux-ubuntu-20.04.tar.gz -L https://github.com/oclint/oclint/releases/download/v22.02/oclint-22.02-llvm-13.0.1-x86_64-linux-ubuntu-20.04.tar.gz && tar zxvf oclint-22.02-llvm-13.0.1-x86_64-linux-ubuntu-20.04.tar.gz && rm oclint-22.02-llvm-13.0.1-x86_64-linux-ubuntu-20.04.tar.gz && echo 'export PATH=/home/codespace/oclint-22.02/bin:$PATH' >> /home/codespace/.bashrc
